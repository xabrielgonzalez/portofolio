---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card/index.astro";
import IntroCard from "../components/IntroCard.astro";
import MyStack from "../components/MyStack.astro";

import AboutMe from "../components/AboutMe.astro";
import Now from "../components/Now.astro";
import { Icon } from "astro-icon/components";
import { LINKS } from "../lib/constants";
import Easter from "../components/Easter.astro"

---

<script>
  import { stagger, spring, timeline, type TimelineDefinition } from "motion";
  import { loaderAnimation } from "../lib/constants";
  const cards = document.querySelectorAll(".card");

  const sequence = [
    loaderAnimation,
    [
      cards,
      { y: ["40%", "0%"], opacity: [0, 1] },
      {
        at: "-0.1",
        duration: 0.4,
        delay: stagger(0.3),
        easing: spring({ velocity: 100, stiffness: 50, damping: 10 }),
      },
    ],
  ];

  timeline(sequence as TimelineDefinition);
</script>

<Layout
  title="Xabriel Gonzalez | Frontend Developer"
  description="Software developer with strong focus on the user experience animations and micro interactions"
>
  <main
    class="text-white m-auto p-2 grid gap-2 max-w-6xl overflow-hidden relative w-full sm:p-4 sm:gap-2 md:grid-cols-2 md:gap-3 md:p-6 lg:h-screen lg:grid-rows-8 lg:grid-cols-4 lg:gap-4 lg:max-h-[800px]"
  >
    <IntroCard />
    <AboutMe />
    <Card
    colSpan="md:col-span-1"
    rowSpan="md:row-span-2"
    colbg="md:bg-[#136BC5] max-sm:bg-[#136BC5] max-md:bg-[#136BC5]"
    >
    <a href={LINKS.linkedin} aria-label="linkeding profile" target="_blank">


      <Icon name="ri:linkedin-box-fill" class="h-24 w-55 max-sm:w-73" />
    </a>
   
   
      
  </Card>
    <MyStack />
  
    <Easter/>
    <Easter/>
    <Easter/>
    <Easter/>
    <Easter/>
    <Now />
    
  </main>
</Layout>
